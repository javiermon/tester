#!/bin/bash
function printhead()
{
    echo "# autogenerated regression test file" >> $1
    echo "# lines starting with # are comments" >> $1
    echo "# one line per test" >> $1
}

echo Removing old tests suites
rm regression.tests
echo Generating new tests suites
printhead regression-all.tests
ls -1 *test.py | >> regression.tests
